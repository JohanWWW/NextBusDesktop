<Page
    x:Class="NextBusDesktop.DeparturesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NextBusDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#222222"
          Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchTextBox"
                 Grid.Column="0" Grid.Row="0"
                 Grid.ColumnSpan="2"
                 FontSize="24"
                 BorderThickness="0"
                 PlaceholderText="Search for stop"
                 KeyDown="OnSearchTextKeyDown"/>
        <SplitView x:Name="MainSplitView"
                   IsPaneOpen="False"
                   DisplayMode="Inline"
                   OpenPaneLength="250"
                   Grid.Row="1">
            <SplitView.Pane>
                <ListBox x:Name="SearchResultList"
                         Grid.Row="1"
                         Margin="0"
                         SelectionChanged="OnSearchResultItemClick">
                    <!-- Programatically generated ListBoxItems -->
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <ListBox x:Name="DepartureListBox"
                         Grid.Column="1" 
                         Grid.Row="1"
                         Background="#222222">
                    <!-- Programatically generated -->
                    <!--<ListBoxItem Height="150"
                                 Margin="0">
                        <StackPanel>
                            <TextBlock Foreground="White" FontSize="56">hello, world</TextBlock>
                        </StackPanel>
                    </ListBoxItem>-->
                </ListBox>
            </SplitView.Content>
        </SplitView>
        
    </Grid>
</Page>
