<Page
    x:Class="NextBusDesktop.DeparturesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NextBusDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Background="#222222">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <!--<RowDefinition Height="45"/>-->
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchTextBox"
                 x:Uid="/DeparturesWindow/SearchForStop"
                 Grid.Column="0" Grid.Row="0"
                 Grid.ColumnSpan="2"
                 FontSize="24"
                 BorderThickness="0"
                 PlaceholderText="Search for stop"
                 KeyDown="OnSearchTextKeyDown"/>

        <SplitView x:Name="MainSplitView"
                   IsPaneOpen="False"
                   DisplayMode="Inline"
                   OpenPaneLength="250"
                   Grid.Row="2">
            <SplitView.Pane>
                <ListBox x:Name="SearchResultList"
                         SelectionChanged="OnSearchResultItemClick">
                    <!-- Programatically generated ListBoxItems -->

                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0">
                        <TextBlock x:Uid="/DeparturesWindow/Earliest" 
                                   Text="Earliest"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Margin="12 0 5 0"/>
                        <TimePicker x:Name="DepartureTimePicker"
                                    ClockIdentifier="24HourClock"/>
                        <TextBlock x:Uid="/DeparturesWindow/Track"
                                   Text="Track"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Margin="12 0 5 0"/>
                        <ComboBox x:Name="TrackComboBox"
                                  VerticalAlignment="Center"
                                  SelectionChanged="OnTrackChanged">
                            <!-- Programatically generated -->
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Margin="10 15 10 0">
                        <Grid BorderBrush="White"
                              BorderThickness="0 0 0 1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="40*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Uid="/DeparturesWindow/Line"
                                           Text="Line"
                                           Margin="5 0 0 5"
                                           Foreground="White" 
                                           FontSize="18"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        BorderBrush="White"
                                        BorderThickness="1 0 0 0">
                                <TextBlock x:Uid="/DeparturesWindow/Direction"
                                           Text="Direction"
                                           Margin="5 0 0 5"
                                           Foreground="White" 
                                           FontSize="18"/> 
                            </StackPanel>
                            <StackPanel Grid.Column="2"
                                        BorderBrush="White"
                                        BorderThickness="1 0 0 0">
                                <TextBlock x:Uid="/DeparturesWindow/DepartureTime"
                                           Text="Departure time"
                                           Margin="5 0 0 5"
                                           Foreground="White" 
                                           FontSize="18"/>
                            </StackPanel>
                            <StackPanel Grid.Column="4"
                                        BorderBrush="White"
                                        BorderThickness="1 0 0 0">
                                <TextBlock x:Uid="/DeparturesWindow/Remaining"
                                           Text="Remaining"
                                           Margin="5 0 0 5"
                                           Foreground="White" 
                                           FontSize="18"/>
                            </StackPanel>
                            <StackPanel Grid.Column="5"
                                        BorderBrush="White"
                                        BorderThickness="1 0 0 0">
                                <TextBlock x:Uid="/DeparturesWindow/Track"
                                           Text="Track"
                                           Margin="5 0 0 5"
                                           Foreground="White" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                        </Grid>
